<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/goto_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ir para NewsActivity" />

    <TextView
        android:id="@+id/logo"
        android:layout_below="@id/goto_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="@string/projeto_gua"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/nav_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">


        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_icone_report" />

        <ImageView
            android:id="@+id/icon_news"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_icone_report" />

        <ImageView
            android:id="@+id/icon_report"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_icone_report" />

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_icone_report" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/cards_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_icons"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp">


    </ScrollView>

</RelativeLayout>